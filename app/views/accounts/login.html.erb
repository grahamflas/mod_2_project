<h1>Login</h1>

<%= form_tag '/login' do%>
  <%= label :name, "Name" %>
  <%= text_field_tag :name %>
  <%= label :password, "Password" %>
  <%= password_field_tag :password %>
  <%= label :password, "Confirm Password" %>
  <%= password_field_tag :password_confirmation %>
  <%= submit_tag "Login" %>
<% end %>