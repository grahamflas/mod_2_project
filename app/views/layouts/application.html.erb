<!DOCTYPE html>
<html>
  <head>
    <title>Mod2Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="header">
      <% if current_user %>
        <div class="left">Welcome, <%= current_user.first_name %></div>
        <div class="right"><%= link_to "Logout", logout_path %></div>
      <% else %>
        <%= link_to "Login", login_path %>
      <% end %>
    </div>

    <% if notice %>
      <div class="notice">
        <%= notice %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
