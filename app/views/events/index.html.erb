<h1>All Events</h1>

<h4>Search for Events By:</h4>
   <%= form_tag(events_path, method: :get) do %>
      Name: <%= text_field_tag("search[name]")%>
      <%= submit_tag ("Search")%><br>
      <%end%>
    <%= form_tag(events_path, method: :get) do %>
      Min. Num of Practice Sessions Required: <%= text_field_tag("search[num_of_sessions]")%>
      <%= submit_tag ("Search")%><br>
      <%end%>


<ul>
    <% @events.each do |event| %>
        <li><%= link_to event.name, event_path(event)%></li>
    <%end%>
</ul>